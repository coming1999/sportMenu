<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.he.mapper.MenuMapper">
    <!-- 一对多关系映射 -->
    <resultMap id="menuMap" type="com.he.pojo.MainMenu">
        <id column="id" property="id"></id>
        <result column="title" property="title"></result>
        <result column="path" property="path"></result>
        <collection property="sList" ofType="com.he.pojo.SubMenu">
            <id column="sid" property="id"></id>
            <result column="stitle" property="title"></result>
            <result column="spath" property="path"></result>
        </collection>
    </resultMap>

    <select id="getMenus" resultMap="menuMap">
        SELECT mm.*,sm.id as sid,sm.title as stitle,sm.path as spath
        FROM sportPorject.mainmenu as mm ,sportPorject.submenu as sm WHERE mm.id = sm.mid;
    </select>
</mapper>